.registration_block
  %h2= 'Регистрация'
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-group
      = f.label :Имя_пользователя, class:'control-label'
      = f.text_field :username, autofocus: true, class: 'form-control'
      = f.label :Электронная_почта, class:'control-label'
      = f.email_field :email, autofocus: true, class: 'form-control'
    .form-group
      = f.label :Пароль, class: 'control-label'
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} символов минимум)
      = f.password_field :password, autocomplete: 'off', class: 'form-control'
    .form-group
      = f.label :Подтверждение_пароля, class: 'control-label'
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
    = f.submit 'Зарегистрироваться', class: 'btn btn-primary'
    |
    = render "devise/shared/links"
