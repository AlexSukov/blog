%html
  %head
    %title Blog
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
  %body
    %header
      .container
        %ul.list-unstyled.inline.pull-right.mb-0
          - if user_signed_in?
            %li.inline= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-link header-nav-link'
            %li.inline= link_to 'Edit profile', edit_user_registration_path, class: 'btn btn-link header-nav-link'
          -else
            %li.inline= link_to 'Log in', new_user_session_path, class: 'btn btn-link header-nav-link'
            %li.inline= link_to 'Sign up', new_user_registration_path, class: 'btn btn-link header-nav-link'
    %main.container
      = yield
