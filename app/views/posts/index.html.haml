%p#notice= notice
%h1= 'БЛОГ'
= link_to 'Новый пост', new_post_path
%table.table
  %thead
    %tr
      %th= 'Название'
      %th= 'Тело поста'
      %th= 'Пользователь'
      %th{:colspan => "3"}
  %tbody
    - @posts.each do |post|
      %tr
        %td= post.title
        %td= post.body
        %td= post.user.email
        %td= link_to 'Показать', post
        %td= link_to 'Редактировать', edit_post_path(post)
        %td= link_to 'Удалить', post, method: :delete, data: { confirm: 'Вы уверены?' }
